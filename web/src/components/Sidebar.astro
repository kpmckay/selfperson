---
import { siteConfig } from '../config';
import { getCollection } from 'astro:content';

// Get recent feed entries for table of contents
const feedEntries = await getCollection('feed');
const sortedFeedEntries = feedEntries.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Helper to add base path for assets
const getAssetPath = (path: string) => {
  return `${import.meta.env.BASE_URL}${path}`.replace(/\/+/g, '/');
};
---

<div class="p-6 md:p-8">
  <!-- Profile Picture -->
  <div class="flex justify-center mb-6">
    <a href="/">
      <img
        src={getAssetPath(siteConfig.profile.image)}
        alt={siteConfig.name}
        class="w-32 h-32 rounded-full object-cover border-4 border-primary-200 hover:border-primary-300 transition-colors cursor-pointer"
      />
    </a>
  </div>

  <!-- Name -->
  <h1 class="text-2xl font-bold text-center mb-2">{siteConfig.name}</h1>

  <!-- About Me -->
  <div class="mb-8">
    <p class="text-sm text-primary-700 leading-relaxed text-center">
      {siteConfig.profile.bio}
    </p>
  </div>

  <!-- Recent Posts -->
  {sortedFeedEntries.length > 0 && (
    <div class="mb-8">
      <h2 class="text-sm font-semibold uppercase tracking-wide text-primary-600 mb-3">
        Recent Posts
      </h2>
      <ul class="space-y-2">
        {sortedFeedEntries.slice(0, 5).map((entry) => (
          <li>
            <a
              href={entry.data.link}
              target={entry.data.type === 'blog' ? '_self' : '_blank'}
              rel={entry.data.type === 'blog' ? '' : 'noopener noreferrer'}
              class="text-sm text-primary-700 hover:text-primary-900 block truncate"
            >
              {entry.data.title}
            </a>
          </li>
        ))}
      </ul>
    </div>
  )}

  <!-- Social Links -->
  <div class="mb-8">
    <h2 class="text-sm font-semibold uppercase tracking-wide text-primary-600 mb-3">
      Connect
    </h2>
    <div class="flex flex-wrap gap-3">
      {siteConfig.social.linkedin && (
        <a
          href={siteConfig.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary-600 hover:text-primary-900 transition-colors"
          aria-label="LinkedIn"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
          </svg>
        </a>
      )}
      {siteConfig.social.github && (
        <a
          href={siteConfig.social.github}
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary-600 hover:text-primary-900 transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
          </svg>
        </a>
      )}
      {siteConfig.social.twitter && (
        <a
          href={siteConfig.social.twitter}
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary-600 hover:text-primary-900 transition-colors"
          aria-label="Twitter"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
          </svg>
        </a>
      )}
    </div>
  </div>
</div>
