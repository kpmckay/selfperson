---
import '../styles/global.css';
import { siteConfig } from '../config';
import Sidebar from './Sidebar.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = siteConfig.title, description = siteConfig.description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen flex justify-center">
      <div class="w-full max-w-[1400px] flex flex-col lg:flex-row">
        <!-- Sidebar -->
        <aside class="lg:w-80 lg:fixed lg:h-screen lg:overflow-y-auto bg-white border-r border-primary-200">
          <Sidebar />
        </aside>

        <!-- Main content -->
        <main class="flex-1 lg:ml-80 p-6 md:p-8 lg:p-12">
          <div class="max-w-3xl">
            <slot />
          </div>
        </main>
      </div>
    </div>
  </body>
</html>
