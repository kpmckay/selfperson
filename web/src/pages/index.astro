---
import Layout from '../components/Layout.astro';
import FeedEntry from '../components/FeedEntry.astro';
import { getCollection } from 'astro:content';

// Get all feed entries and sort by date (newest first)
const feedEntries = await getCollection('feed');
const sortedEntries = feedEntries.sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

// Helper to add base path for assets
const getAssetPath = (path: string) => {
  return `${import.meta.env.BASE_URL}${path}`.replace(/\/+/g, '/');
};
---

<Layout>
  <div class="mb-8 flex items-center gap-3">
    <h1 class="text-3xl md:text-4xl font-bold text-primary-900">Activity Feed</h1>
    <a
      href={getAssetPath('/rss.xml')}
      target="_blank"
      rel="noopener noreferrer"
      class="text-primary-600 hover:text-primary-900 transition-colors"
      aria-label="RSS Feed"
      title="Subscribe to RSS feed"
    >
      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
        <path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"/>
      </svg>
    </a>
  </div>

  <div class="space-y-0">
    {sortedEntries.length === 0 ? (
      <div class="text-center py-12 text-primary-500">
        <p>No entries yet. Add your first entry to get started!</p>
      </div>
    ) : (
      sortedEntries.map((entry) => (
        <FeedEntry
          date={entry.data.date}
          title={entry.data.title}
          summary={entry.data.summary}
          link={entry.data.link}
          type={entry.data.type}
          tag={entry.data.tag}
        />
      ))
    )}
  </div>
</Layout>
